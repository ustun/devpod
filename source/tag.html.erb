---
pageable: true
per_page: 10
---
<%
icon_home = '<i class="fa fa-home"></i>'
%>
<div class="block">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <%= partial "partials/logo_part" %>
                <p>
                    <a href="https://twitter.com/share" class="twitter-share-button" data-text="devPod : <%= tagname %> etiketleri" data-via="podcastmaster" data-lang="tr" data-size="large" data-hashtags="devpod">Tweet</a>
                    <script>
                      !function(d,s,id){
                        var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';
                        if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';
                        fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
                    </script>
                </p>

            </div>
            <div class="col-sm-8" id="tag-detail">
                <p><%= link_to "#{icon_home} Anasayfa", "/", :class => "btn btn-devpod", :target => "_self" %></p>
                <h1><strong><%= tagname %></strong> içeren <%= articles.count %> kayıt var ...</h1>
                <hr/>
                <ul class="list-unstyled list-devpod">
                    <%
                    if paginate && page_number > 1
                        concat "<li class=\"page-number\">Sayfa: #{page_number}</li>"
                    end
                    page_articles.each_with_index do |article, i|
                        file_size = Filesize.from("#{article.metadata[:page]['length']} B").to_s("Mb")
                        time_data = article.date.strftime('%Y-%m-%d %H:%M:%S')
                        i18n_date = I18n.localize(article.date, :format => "%e %B %Y, %A, saat %H:%M")

                        concat '<li>'
                            concat link_to '<i class="fa fa-download"></i>', article.metadata[:page]['download'], :class => "btn btn-primary btn-xs pull-right", :title => "İndirmek için tıkla: #{file_size}"
                            concat link_to "#{article.title}<time datetime=\"#{time_data}\">#{i18n_date}</time>", article, :target => "_self", :title => "Bölüm notları ve detaylar için tıklayın"
                        concat '</li>'
                    end
                    %>
                </ul>
                <%= custom_pager :paginate => paginate,
                                 :num_pages => num_pages,
                                 :current_page => page_number,
                                 :prev_page => prev_page,
                                 :next_page => next_page,
                                 :url_home => "/etiket/#{tagname}/",
                                 :url_schema => "/etiket/#{tagname}/sayfa/%d/"
                %>

            </div>
        </div>
    </div>
</div>
