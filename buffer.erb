<div id="post-detail">
  <h1><%= current_page.title %></h1>
  <h2><%= I18n.localize(current_page.date, :format => "%e %B %Y") %></h2>
  <%= yield %>
  <div id="tag-cloud">
    <% current_page.tags.each do |tag| %>
      <span class="badge"><%= tag %></span>
    <% end %>
  </div>
</div>



<% page_articles.each_with_index do |article, i| %>
  <p><%= link_to article.title, article %></p>
